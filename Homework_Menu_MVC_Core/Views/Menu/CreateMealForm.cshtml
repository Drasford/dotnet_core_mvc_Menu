@model Homework_Menu_MVC_Core.Models.ViewModels.MealWithMealTypesViewModel

@{
    ViewData["Title"] = "CreateMealForm";
}

<h1>CreateMealForm</h1>

<h4>Meal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Menu" asp-action="CreatePost" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="meal.Name" class="control-label"></label>
                <input asp-for="meal.Name" class="form-control" />
                
            </div>
            <div class="form-group">
                <label asp-for="meal.Price" class="control-label"></label>
                <input asp-for="meal.Price" class="form-control" />
                <span asp-validation-for="meal.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingredients" class="control-label"></label>
                <select asp-for="PostIngredients" multiple class="form-control" asp-items="Model.Ingredients"></select>
            </div>
            <div class="form-group">
                <label asp-for="PostMealType" class="control-label"></label>
                <br />
                @foreach (var item in Model.MealTypes)
                {
                    <input asp-for="PostMealType" id="@item.Name" type="radio" value="@item.Name" name="Type" />
                    <label for="@item.Name">@item.Name</label>
                    <br />
                }
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="meal.IsVegetarian" /> @Html.DisplayNameFor(model => model.meal.IsVegetarian)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
